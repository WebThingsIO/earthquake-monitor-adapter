{
  "author": "Mozilla IoT",
  "description": "Earthquake monitor for Mozilla WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/earthquake-monitor-adapter",
  "id": "earthquake-monitor-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Earthquake Monitor",
  "options": {
    "default": {
      "locations": []
    },
    "schema": {
      "type": "object",
      "required": [
        "locations"
      ],
      "properties": {
        "locations": {
          "description": "List of locations",
          "items": {
            "type": "object",
            "required": [
              "name",
              "latitude",
              "longitude",
              "radius",
              "magnitude",
              "pollInterval",
              "activeInterval"
            ],
            "properties": {
              "name": {
                "description": "Name of location",
                "type": "string"
              },
              "latitude": {
                "description": "Latitude of location",
                "type": "number"
              },
              "longitude": {
                "description": "Longitude of location",
                "type": "number"
              },
              "radius": {
                "default": 500,
                "description": "Radius in kilometers around center for which to include events",
                "minimum": 1,
                "type": "number"
              },
              "magnitude": {
                "default": 1.0,
                "description": "Minimum magnitude of events to include",
                "minimum": 1.0,
                "type": "number"
              },
              "pollInterval": {
                "default": 60,
                "description": "Interval in seconds at which to poll the USGS for changes",
                "minimum": 30,
                "type": "integer"
              },
              "activeInterval": {
                "default": 5,
                "description": "Interval in minutes for which the sensor value should stay active after an earthquake is detected",
                "minimum": 1,
                "type": "integer"
              }
            }
          },
          "type": "array"
        }
      }
    }
  },
  "short_name": "Earthquake",
  "version": "0.2.1"
}
